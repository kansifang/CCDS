        popComp("FormatdocDefInfo","/Common/Configurator/FormatDocManage/FormatdocDefInfo.jsp","DocID="+sDocID+"~"+"DirID="+sDirID,"");
        
        
	}

	/*~[Describe=删除记录;InputParam=无;OutPutParam=无;]~*/
