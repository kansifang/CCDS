	/*~[Describe=新增记录;InputParam=无;OutPutParam=无;]~*/
	function newRecord()
	{
        sReturn=popComp("FormatdocDefInfo","/Common/Configurator/FormatDocManage/FormatdocDefInfo.jsp","DocID=<%=sDocID%>","");
