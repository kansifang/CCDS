		<servlet-name>image</servlet-name>
		<url-pattern>/image</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>BoardViewServlet</servlet-name>
		<url-pattern>/boardview</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>FileViewServlet</servlet-name>
		<url-pattern>/fileview</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
        <servlet-name>GetNewsServlet</servlet-name>
        <url-pattern>/GetNewsServlet</url-pattern>
    </servlet-mapping>
