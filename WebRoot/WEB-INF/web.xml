<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

	<display-name>MS</display-name>
	<jsp-config>
		<jsp-property-group>
			<display-name>JSPConfiguration</display-name>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>GBK</page-encoding>
		</jsp-property-group>
	</jsp-config>

    <filter>
        <filter-name>Set Character Encoding</filter-name>
        <filter-class>com.lmt.frameapp.web.filter.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>GBK</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>Set Character Encoding</filter-name>
        <url-pattern>*.jsp</url-pattern>
    </filter-mapping>

	<servlet>
		<servlet-name>InitAREServlet</servlet-name>
		<servlet-class>com.lmt.frameapp.web.servlet.InitAREServlet</servlet-class>
		<init-param>
			<param-name>ConfigFile</param-name>
			<param-value>/WEB-INF/etc/are.xml</param-value>
		</init-param>
		<init-param>
			<param-name>AppHome</param-name>
			<param-value>/WEB-INF</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>InitDataServlet</servlet-name>
		<servlet-class>com.lmt.frameapp.web.servlet.InitDataServlet</servlet-class>
		<init-param>
			<param-name>ConfigFile</param-name>
			<param-value>/WEB-INF/etc/amarsoft.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>image</servlet-name>
		<servlet-class>image</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>BoardViewServlet</servlet-name>
		<servlet-class>com.lmt.frameapp.web.servlet.BoardViewServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>FileViewServlet</servlet-name>
		<servlet-class>com.lmt.frameapp.web.servlet.FileViewServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>GetNewsServlet</servlet-name>
        <servlet-class>com.lmt.frameapp.web.servlet.GetNewsServlet</servlet-class>
    </servlet>
